{
  "name": "@docukit/docnode",
  "version": "0.2.0",
  "license": "SEE LICENSE IN LICENSE.md",
  "description": "Type-safe documents with conflict resolution. Faster than any CRDT.",
  "type": "module",
  "homepage": "https://docukit.dev",
  "repository": {
    "type": "git",
    "url": "https://github.com/docukit/docukit.git",
    "directory": "packages/docnode"
  },
  "scripts": {
    "dev": "tsc -p tsconfig.build.json --watch",
    "build": "tsc -p tsconfig.build.json",
    "clean": "rm -rf .next node_modules .turbo dist tsconfig.build.tsbuildinfo || rmdir /s /q .next node_modules .turbo dist tsconfig.build.tsbuildinfo",
    "typecheck": "tsc --noEmit"
  },
  "files": [
    "dist",
    "LICENSE.md",
    "README.md"
  ],
  "exports": {
    ".": {
      "vitest": "./src/exports/index.ts",
      "types": "./dist/src/exports/index.d.ts",
      "default": "./dist/src/exports/index.js"
    }
  },
  "dependencies": {
    "ulid": "^3.0.1"
  },
  "keywords": [
    "real-time",
    "collaborative",
    "collaboration",
    "rtc",
    "conflict-resolution",
    "CRDT",
    "OT",
    "Operational Transformation",
    "undo",
    "tree",
    "document",
    "local-first",
    "offline-first"
  ]
}

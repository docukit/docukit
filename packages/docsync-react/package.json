{
  "name": "@docukit/docsync-react",
  "license": "SEE LICENSE IN LICENSE.md",
  "private": true,
  "type": "module",
  "homepage": "https://docukit.dev/docsync",
  "repository": {
    "type": "git",
    "url": "https://github.com/docukit/docukit.git",
    "directory": "packages/docsync-react"
  },
  "files": [
    "dist",
    "LICENSE.md",
    "README.md"
  ],
  "scripts": {
    "dev": "tsc -p tsconfig.build.json --watch",
    "build": "tsc -p tsconfig.build.json",
    "clean": "rm -rf .next node_modules .turbo dist tsconfig.build.tsbuildinfo || rmdir /s /q .next node_modules .turbo dist tsconfig.build.tsbuildinfo",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@types/react": "19.1.8"
  },
  "dependencies": {
    "@docukit/docsync": "workspace:*",
    "react": "19.1.0"
  },
  "exports": {
    ".": {
      "vitest": "./src/exports/index.ts",
      "types": "./dist/src/exports/index.d.ts",
      "default": "./dist/src/exports/index.js"
    },
    "./*": {
      "vitest": "./src/exports/*.ts",
      "types": "./dist/src/exports/*.d.ts",
      "default": "./dist/src/exports/*.js"
    }
  },
  "keywords": [
    "sync",
    "sync engine",
    "react",
    "real-time",
    "collaborative",
    "collaboration",
    "rtc",
    "conflict-resolution",
    "CRDT",
    "OT",
    "Operational Transformation",
    "document",
    "local-first",
    "offline-first"
  ]
}

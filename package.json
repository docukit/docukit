{
  "name": "@docukit/monorepo",
  "private": true,
  "engines": {
    "node": ">=22"
  },
  "license": "SEE LICENSE IN LICENSE.md",
  "type": "module",
  "homepage": "https://docnode.dev",
  "repository": {
    "type": "git",
    "url": "https://github.com/docukit/docukit.git"
  },
  "scripts": {
    "build": "turbo build",
    "dev": "lsof -ti:3000,4000,8081 | xargs kill -9; turbo dev",
    "fix": "concurrently \"prettier --write . --log-level warn\" \"eslint\" \"tsc --noEmit\" \"turbo typecheck --log-order=grouped\" --prefixColors \"yellow,magenta,green,cyan\" --group --names \"prettier,eslint,tsc-root,tsc-packages\" --prefix name",
    "check": "concurrently \"prettier --check . --log-level warn\" \"eslint\" \"tsc --noEmit\" \"turbo typecheck --log-order=grouped\" --prefixColors \"yellow,magenta,green,cyan\" --group --names \"prettier,eslint,tsc-root,tsc-packages\" --prefix name",
    "check:deps": "knip",
    "test": "vitest watch",
    "test:once": "vitest --watch=false",
    "test:ci": "turbo build --filter='!@docukit/docs' && CI=true vitest --watch=false",
    "test:coverage": "vitest --coverage --ui",
    "test:coverage:once": "vitest --coverage --watch=false",
    "test:coverage:ci": "turbo build --filter='!@docukit/docs' && CI=true vitest --coverage --watch=false",
    "test:ui": "playwright test --project=chromium",
    "clean": "concurrently \"turbo clean\" \"rm -rf .test-results node_modules dist .turbo tsconfig.tsbuildinfo\" || rmdir /s /q .test-results node_modules dist .turbo tsconfig.tsbuildinfo",
    "prepare": "git config --local core.hooksPath .github/hooks && echo 'githooks installed' || echo 'githooks install failed'",
    "bench": "MITATA=1 npx tsx tests/core/benchmarks/iterators.bench.ts",
    "bench:vitest": "vitest bench",
    "bench:bun": "MITATA=1 bun run tests/core/benchmarks/iterators.bench.ts",
    "dev:docnode": "pnpm --filter @docukit/docnode dev",
    "publish-npm": "pnpm check && pnpm test:ci && pnpm build && pnpm publish --filter @docukit/docnode"
  },
  "packageManager": "pnpm@9.10.0",
  "lint-staged": {
    "*": "prettier --write --ignore-unknown"
  },
  "prettier": {
    "plugins": [
      "prettier-plugin-tailwindcss"
    ]
  },
  "devDependencies": {
    "@playwright/test": "1.51.0",
    "@types/node": "^22.10.7",
    "@vitejs/plugin-react": "^5.1.2",
    "@vitest/browser": "^4.0.8",
    "@vitest/browser-playwright": "^4.0.8",
    "@vitest/coverage-v8": "4.0.8",
    "@vitest/eslint-plugin": "^1.1.25",
    "@vitest/ui": "4.0.8",
    "bun": "^1.1.42",
    "concurrently": "^9.1.2",
    "eslint": "^9.19.0",
    "eslint-config-next": "^16.1.6",
    "eslint-plugin-barrel-files": "^3.0.1",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-playwright": "^2.2.0",
    "eslint-plugin-regexp": "^2.10.0",
    "jiti": "^2.4.2",
    "knip": "^5.82.1",
    "lint-staged": "15.4.1",
    "mitata": "^1.0.34",
    "playwright": "1.51.0",
    "prettier": "3.8.1",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "tsx": "^4.19.2",
    "turbo": "2.3.3",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.21.0",
    "ultimate-tooling": "^1.0.0",
    "vitest": "^4.0.8"
  }
}
